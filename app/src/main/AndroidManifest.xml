<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission to query all installed packages on Android 11+ -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Permission to access package usage stats - required for foreground app detection -->
    <!-- Note: User must grant "Usage Access" permission in Settings → Special app access → Usage access -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />

    <!-- Permissions for accessibility service and overlay -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    
    <!-- Permissions for emergency calling -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CALL_PRIVILEGED" />
    
    <!-- Permission for exact alarm scheduling (required for foreground services on API 35+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    
    <!-- Permission for special use foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    
    <!-- Permissions for VPN service - disabled for battery optimization -->
    <!-- <uses-permission android:name="android.permission.BIND_VPN_SERVICE" /> -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SYSTEM_EXEMPTED" />
    <!-- <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" /> -->

    <application
        android:name=".WaktApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wakt">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Wakt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".presentation.activities.BlockingOverlayActivity"
            android:exported="false"
            android:theme="@style/Theme.Wakt"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />
        
        <!-- Brick Launcher Activity - shows essential apps during brick sessions -->
        <!-- NOTE: No longer acts as default launcher - uses persistent overlay instead -->
        <activity
            android:name=".presentation.activities.BrickLauncherActivity"
            android:exported="false"
            android:theme="@style/Theme.Wakt"
            android:launchMode="singleInstance"
            android:taskAffinity="com.example.wakt.brick"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:showOnLockScreen="true" />
        
        <!-- Brick Blocking Overlay - shows when user tries to bypass brick mode -->
        <activity
            android:name=".presentation.activities.BrickBlockingOverlay"
            android:exported="false"
            android:theme="@style/Theme.Wakt"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true"
            android:noHistory="true" />
        
        <!-- Emergency Override Activity -->
        <activity
            android:name=".presentation.activities.EmergencyOverrideActivity"
            android:exported="false"
            android:theme="@style/Theme.Wakt"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />
        
        <service
            android:name=".services.AppBlockingService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        
        <!-- Brick Enforcement Service - keeps brick session persistent -->
        <service
            android:name=".services.BrickEnforcementService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Focus session enforcement and overlay management" />
        </service>

        <!-- Brick Overlay Service - persistent overlay window for brick enforcement -->
        <service
            android:name=".services.BrickOverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Persistent overlay for brick session UI" />
        </service>
        
        <!-- VPN service disabled for battery optimization - keeping for future use -->
        <!--
        <service
            android:name=".services.WebsiteBlockingVpnService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="specialUse">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Website blocking VPN service" />
        </service>
        -->
        
        <!-- Device Admin Receiver for uninstall protection -->
        <receiver
            android:name=".services.WaktDeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>